<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 配置上下文参数 -->
    <context-param>
        <param-name>view-prefix</param-name>
        <param-value>/</param-value>
    </context-param>
    <context-param>
        <param-name>view-suffix</param-name>
        <param-value>.html</param-value>
    </context-param>

    <servlet>
        <servlet-name>Demo03Session</servlet-name>
        <servlet-class>com.example.learn.servlets.Demo03Session</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Session04</servlet-name>
        <servlet-class>com.example.learn.servlets.Session04</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Demo05</servlet-name>
        <servlet-class>com.example.learn.servlets.Demo05</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Demo06</servlet-name>
        <servlet-class>com.example.learn.servlets.Demo06</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Demo03Session</servlet-name>
        <url-pattern>/demo03</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Session04</servlet-name>
        <url-pattern>/demo04</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo05</servlet-name>
        <url-pattern>/demo05</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Demo06</servlet-name>
        <url-pattern>/demo06</url-pattern>
    </servlet-mapping>

</web-app>